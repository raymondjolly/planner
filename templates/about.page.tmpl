{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>This is the about page</h1>
                <p>This is some text</p>

                <p>This came from the template {{index .StringMap "test"}}
                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I dont know your IP Address yet. Go to <a href="/">Homepage</a> so I can set it.
                    {{end}}

                </p>
            </div>
        </div>
    </div>
{{end}}